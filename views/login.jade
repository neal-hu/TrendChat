doctype 5
html
	head
		meta(charset='utf-8')
		meta(name="viewport",content="width=device-width",initial-scale=1.0)
		title= TrendChatLogin
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		script(src='/javascripts/login.js')
		script(src='/socket.io/socket.io.js')
		link(rel='stylesheet', href='/stylesheets/app.css')
	body
		div(class='navbar navbar-inverse navbar-fixed-top')
			div(class="navbar-inner")
				div(class="container")
					a(class="btn btn-navbar" data=toggle="collapse" data-target=".nav-collapse")
						span(class="icon-bar")
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="brand" href='#')  &nbsp&nbsp&nbspTrendChat
		script(src="/javascripts/bootstrap.js")
		div(class="container main")
		#content(class='container',style="width: 300px;")
			#status
				p Please login
			h1(class="form-signin-heading") Welcome to Trend Chat
			div
				input#username(style="width: 220px;",type="text", class="form-control",placeholder="Username")	
			div	
				input#password(style="width: 220px;",class="form-control",placeholder="Password",type="password")	
			div	
				input#login(style="width: 120px;float: left;",class="btn btn-default",type="button", value="Login")

				input#signup(style="width: 120px",class="btn btn-default",type="button", value="Sign Up")